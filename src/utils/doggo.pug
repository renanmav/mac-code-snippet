//-
	╔═════════════════════════╗
	║   Essential meta tags   ║
	╚═════════════════════════╝
mixin charset(charset)
	meta(charset=charset ? charset : "utf-8")

mixin viewport(viewport)
	meta(name="viewport" content=viewport ? viewport : "width=device-width, initial-scale=1.0")

mixin ie-support(version)
	meta(http-equiv="X-UA-Compatible" content=version ? `ie=${version}` : "ie=edge")

mixin keywords(keywords)
	if Array.isArray(keywords)
		meta(name="keywords" content=keywords.join(", "))

//- 150 words
mixin description(description)
	meta(name="description" content=description)

//-
	╔════════════════════════╗
	║   Optional meta tags   ║
	╚════════════════════════╝
mixin subject(subject)
	meta(name="subject" content=subject)

mixin copyright(copyright)
	meta(name="copyright" content=copyright)

mixin language(language)
	meta(name="language" content=language)

mixin robots(content)
	if Array.isArray(content)
		meta(name="robots" content=content.join(", "))

mixin revised(date)
	meta(name="revised" content=date)

//-
	╔═════════════════════════╗
	║   OpenGraph meta tags   ║
	╚═════════════════════════╝
mixin og-title(title)
	meta(name="og:title" content=title)

mixin og-type(type)
	meta(name="og:type" content=type)

mixin og-url(url)
	meta(name="og:url" content=url)

mixin og-image(img)
	meta(name="og:image" content=img)

mixin og-site_name(name)
	meta(name="og-site_name" content=name)

mixin og-description(description)
	meta(name="og:description" content=description)

mixin og-email(email)
	meta(name="og:email" content=email)

//- Frequently used utils
mixin no-fouc()
	script.
		const page = document.querySelector("html")
		page.style.display = "none"
		window.onload = page.style.display = "block"

mixin favicon(imageUrl)
	if imageUrl
		- getImageExtRegex = /\.([0-9a-z]+)$/i
		- imageExt = getImageExtRegex.exec(imageUrl)
		link(rel="shortcut icon" type="image/#{imageExt[1]}" href=imageUrl)

mixin css(url)
	link(rel="stylesheet" href=url)

mixin js(url)
	script(src=url)

//- Experimental
mixin table(thead)
	if Array.isArray(thead)
		table
			thead
				tr
					each header in thead
						th= header
			tbody
				block

mixin tr(row)
	if Array.isArray(row)
		tr
			each data in row
				td= data
